<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="#F2F2F2">

    <!-- Stok Güncelleme -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mevcut Stok:"
        android:textSize="20sp"
        android:textColor="#333333"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif-medium"/>

    <EditText
        android:id="@+id/stockInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Yeni Stok Miktarı"
        android:inputType="number"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginBottom="18dp"
        android:textColor="#333333"/>

    <Button
        android:id="@+id/updateStockButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Stok Güncelle"
        android:textColor="@android:color/white"
        android:backgroundTint="#E62166"
        android:elevation="8dp"
        android:layout_marginBottom="18dp" />




    <!-- Satış Durumu -->
    <Switch
        android:id="@+id/availableSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Satışta mı?"
        android:textColor="#333333"
        android:layout_marginBottom="18dp"/>

    <Button
        android:id="@+id/updateAvailabilityButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Satış Durumu Güncelle"
        android:textColor="@android:color/white"
        android:backgroundTint="#E62166"
        android:elevation="8dp"
        android:layout_marginBottom="18dp" />

    <!-- Fiyat Güncelleme -->
    <EditText
        android:id="@+id/priceInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Yeni Fiyat"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginBottom="18dp"
        android:textColor="#333333"/>

    <Button
        android:id="@+id/updatePriceButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Fiyatı Güncelle"
        android:textColor="@android:color/white"
        android:backgroundTint="#E62166"
        android:elevation="8dp"
        android:layout_marginBottom="18dp" />
    <!-- İsim Güncelleme -->

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Yeni Ürün Adı"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginBottom="18dp"
        android:textColor="#333333"/>

    <Button
        android:id="@+id/updateNameButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Ürün adını Güncelle"
        android:textColor="@android:color/white"
        android:backgroundTint="#E62166"
        android:elevation="8dp"
        android:layout_marginBottom="18dp" />

</LinearLayout>
